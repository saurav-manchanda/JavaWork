<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="triangle" class="com.bridgelabz.initializinglist.Triangle">
		<property name="list">
			<list>
				<ref bean="zeroPoint"></ref>
				<ref bean="firstPoint"></ref>
				<ref bean="secondPoint"></ref>
			</list>
		</property>
	</bean>

	<bean id="zeroPoint" class="com.bridgelabz.initializinglist.Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>

	<bean id="firstPoint" class="com.bridgelabz.initializinglist.Point">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>
	</bean>

	<bean id="secondPoint" class="com.bridgelabz.initializinglist.Point">
		<property name="x" value="20"></property>
		<property name="y" value="0"></property>
	</bean>
</beans>